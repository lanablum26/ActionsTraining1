name: Super-Linter (pull request)

on:
  pull_request:
    types: [opened, synchronize, reopened, ready_for_review]

jobs:
  super-lint:
    name: Run Super-Linter
    runs-on: ubuntu-latest
    timeout-minutes: 30

    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Set up Node (needed for some linters)
        uses: actions/setup-node@v4
        with:
          node-version: "18"

      - name: Run Super-Linter
        uses: github/super-linter@v5
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          # Set to "true" to lint the whole repo each run. Default false will only lint changed files.
          VALIDATE_ALL_CODEBASE: false
          # Adjust this to your default branch name if it's not 'main'
          DEFAULT_BRANCH: main
          # Example: disable specific linters (comma separated). Uncomment and edit if needed.
          # DISABLE_LINTERS: "php-cs-fixer, rubocop"
          # Example: exclude paths (comma separated). Uncomment and edit if needed.
          # EXCLUDED_DIRECTORIES: "node_modules, build, dist"
